<Window x:Class="PDF_Merger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDF_Merger" xmlns:viewmodels="clr-namespace:PDF_Merger.ViewModels"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Title="Actom PDF Merger v0.1 (Developer: Gerad Mupfumisi)"
        MinHeight="700" MinWidth="800"
        Height="700" Width="800"
        WindowState="Maximized"
        Background="White"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}">

    <Grid>
        <Frame x:Name="MainFrame" 
               NavigationUIVisibility="Hidden"
               Background="White"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
              />
    </Grid>
</Window>

<Window x:Class="PDF_Merger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDF_Merger" xmlns:viewmodels="clr-namespace:PDF_Merger.ViewModels"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Title="Custom PDF Tool v0.2 (Developer: Gerad Mupfumisi)"
        MinHeight="700" MinWidth="800"
        Height="700" Width="800"
        WindowState="Maximized"
        Background="White"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}">

    <Window.Resources>

    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="OpenButton"
                    Content="Open"
                    Style="{StaticResource RoundedButtonStyle}"
                    Click="OpenButton_Click"/>

            <Button x:Name="Pdfpage" 
                    Content="Viewer" 
                    Style="{StaticResource RoundedButtonStyle}"
                    Click="Pdfpage_Click"/>

            <Button x:Name="PdfMerge" 
                    Content="Merger" 
                    Style="{StaticResource RoundedButtonStyle}"
                    Click="PdfMerge_Click"/>

            <Button x:Name="PdfSplitter"
                    Content="Splitter" 
                    Style="{StaticResource RoundedButtonStyle}"
                    Click="PdfSplitter_Click"/>

            <Button x:Name="ToImage"
                    Content="To Image"
                    Style="{StaticResource RoundedButtonStyle}"
                    Click="ToImage_Click"/>


        </StackPanel>

        <Frame x:Name="MainFrame" 
               Grid.Row="1"
               NavigationUIVisibility="Hidden"
               Background="White"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
              />
    </Grid>
</Window>

<Page x:Class="PDF_Merger.Views.SplitterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PDF_Merger.Views" xmlns:syncfusion="clr-namespace:Syncfusion.Windows.PdfViewer;assembly=Syncfusion.PdfViewer.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Background="White"
      Title="SplitterPage">

    <Grid>
        <syncfusion:PdfViewerControl x:Name="SplitterPdf"
                                     DocumentLoaded="SplitterPdf_DocumentLoaded"
                                     EnableRedactionTool="False"
                                     IsBookmarkEnabled="False"
                                     IsManipulationEnabled="False"
                                     />
    </Grid>
</Page>
